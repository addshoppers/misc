<script type="text/javascript"> 			
function init() {
   AddShoppersWidget.API.Event.bind("load", addshoppers_googleplus);		
};
function addshoppers_googleplus() {		
	document.getElementById("addshoppers_googleplus").href= "https://plus.google.com/share?url=" + encodeURIComponent(document.URL + (window.location.search ? '&' : '?') + "custom_ref=" + AddShoppersWidget.short_id + "G");
}
if (window.addEventListener) {			
   window.addEventListener("load", init, false); 
} else {
   document.onreadystatechange = function() { 
    if(document.readyState in {loaded: 1, complete: 1}) {
	document.onreadystatechange = null; 
       init();			
    } 
  }					
} 
</script>
